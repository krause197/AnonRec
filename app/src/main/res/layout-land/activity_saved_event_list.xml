<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:showDividers="middle"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/fragmentRestaurantList"
        android:name="com.epicodus.anonrec.ui.meetups.SavedEventListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@layout/fragment_saved_event_list" />

    <View android:background="@drawable/background2"
        android:layout_height="wrap_content"
        android:layout_width="2dp"/>

    <FrameLayout
        android:id="@+id/meetupDetailContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6">

    </FrameLayout>

</LinearLayout>