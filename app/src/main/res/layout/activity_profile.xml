<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileActivity"
    android:background="@drawable/background2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name"
        android:id="@+id/name"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/highlighted_text_material_dark"
        android:textColor="@color/button_material_dark"
        android:textStyle="bold"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="homegroup"
        android:id="@+id/homegroup"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:textSize="26sp"
        android:textColor="@color/button_material_dark"
        android:background="@color/highlighted_text_material_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="neighborhood"
        android:id="@+id/neighborhood"
        android:layout_below="@+id/homegroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/highlighted_text_material_dark"
        android:textStyle="bold|italic" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/defaultUserIcon"
        android:layout_marginTop="24dp"
        android:src="@drawable/icon"
        android:layout_below="@+id/neighborhood"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Icon"
        android:id="@+id/userIconDescription"
        android:layout_below="@+id/defaultUserIcon"
        android:layout_centerHorizontal="true"
        android:background="@color/highlighted_text_material_dark" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/homeButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/primary_light"
        android:textStyle="bold|italic"
        android:textSize="26sp"
        android:textColor="@color/accent"/>

</RelativeLayout>
