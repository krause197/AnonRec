<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    tools:context=".ui.MeetingListActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Name"
            android:id="@+id/group_nameTextView"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:id="@+id/dayTextView"
            android:layout_below="@+id/group_nameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/timeTextView"
            android:layout_below="@+id/dayTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Region of PDX"
            android:id="@+id/cityTextView"
            android:layout_below="@+id/timeTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logo"
            android:layout_toEndOf="@+id/group_nameTextView"
            android:layout_toRightOf="@+id/group_nameTextView"/>


    </RelativeLayout>
</LinearLayout>